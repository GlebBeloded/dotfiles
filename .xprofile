#!/bin/sh

# This file runs when a DM logs you into a graphical session.

xrdb < ~/.Xresources # load xresources
feh --bg-fill ~/.config/wallpaper & # set background image
xset r rate 300 50 &	# Speed xrate up
unclutter &		# Remove mouse when idle
setxkbmap -option caps:swapescape & # map capslock to escape and vice-versa 
setxkbmap -layout us,ru -option 'grp:win_space_toggle' & # toggle between english and russian by pressing mod+space 
polybarrun.sh & # top bar
picom &		# picom for transparency
